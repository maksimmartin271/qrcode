<?xml version="1.0"?>
<ruleset name="Laravel Coding Standard">
    <description>Laravel coding standard for PHP_CodeSniffer</description>

    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>routes</file>
    <file>tests</file>

    <arg name="extensions" value="php"/>
    <arg name="colors"/>
    <arg name="tab-width" value="4"/>

    <rule ref="PSR2"/>
    <rule ref="PSR12"/>
</ruleset>
